{
  "name": "fishbird",
  "version": "0.1.0",
  "description": "Fishbird is a simple, lightweight, and fast Promise utility library",
  "author": "Igor Suvorov <hi@isuvorov.com>",
  "license": "MIT",
  "keywords": [
    "promise",
    "performance",
    "async",
    "await",
    "deferred",
    "deferreds",
    "flow control",
    "dsl",
    "fluent interface",
    "typescript",
    "esm",
    "bluebird"
  ],
  "homepage": "https://github.com/isuvorov/fishbird",
  "repository": "https://github.com/isuvorov/fishbird",
  "bugs": "http://github.com/isuvorov/fishbird/issues",
  "_type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "default": "./lib/index.js",
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "node": "./lib/index.js"
    },
    "./*": {
      "default": "./lib/*.js",
      "require": "./lib/*.js",
      "import": "./lib/*.mjs",
      "node": "./lib/*.js"
    }
  },
  "imports": {
    "#common/*": "./lib/*.cjs"
  },
  "scripts": {
    "test": "npm run test:jest && npm run test:eslint && npm run test:size-limit && npm run test:imports",
    "test:watch": "jest --watch",
    "test:eslint": "eslint src",
    "test:size-limit": "size-limit",
    "test:jest": "jest --coverage",
    "test:imports": "cd test/imports/esm && npm run test && cd ../../.. && cd test/imports/cjs && npm run test",
    "clean": "rm -rf ./lib/* && rm -rf ./coverage",
    "build": "tsup",
    "build:tsc": "npm run clean && tsc",
    "prepublishOnly": "npm run clean && npm run build && npm test && npm version minor",
    "publish": "clean-publish"
  },
  "devDependencies": {
    "@lskjs/eslint-config": "2.13.0",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "clean-publish": "^4.0.2",
    "dual-publish": "^3.0.1",
    "jest": "29.3.1",
    "rimraf": "3.0.2",
    "size-limit": "^8.1.0",
    "ts-jest": "29.0.3",
    "tsup": "^6.5.0",
    "typescript": "4.9.4"
  },
  "eslintConfig": {
    "extends": "@lskjs/eslint-config"
  },
  "clean-publish": {
    "files": ["!(README.md|LICENCE|lib|lib/**)"]
  }
}
