{
    "compilerOptions": {
      "lib": ["esnext"],
      "module": "ESNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "target": "ES2021",

      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "sourceMap": true,

      "outDir": "./lib"
    },
    "include": [
      "src/**/*"
    ]
  }

